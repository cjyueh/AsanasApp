<header>
	<h1><a href="/asanas">yoga asanas</a></h1>
</header>

<h2 class="container">create new asana</h2>

<form class="asana" id="add-asana" action="/asanas" method="post">
	<article class="container">
		<div class="form-group">
			<label for="asana[name]">Name:</label><br>
			<input class="form-control" type="text" name="asana[name]">
		</div>
		<div class="form-group">
			<label for="asana[translation">Translation:</label><br>
			<input class="form-control" type="text" name="asana[translation]">
		</div>
		<div class="form-group">
			<label for="asana[image]">Image URL:</label><br>
			<input class="form-control" type="text" name="asana[image]">
		</div>
		<div class="form-group">
			<label for="asana[asana_type]">Type:</label><br>
			<select class="form-control" type="text" name="asana[asana_type]">
				<option>None</option>
				<option>Arm Balance</option>
				<option>Balance</option>
				<option>Backbend</option>
				<option>Inversion</option>
				<option>Reclined</option>
				<option>Standing</option>
				<option>Seated</option>
			</select>
		</div>
		<div class="form-group">
			<label for="asana[similar_poses">Similar Poses:</label><br>
			<input class="form-control" type="text" name="asana[similar_poses]" placeholder="none">
		</div>
	</article>
	<footer>
		<input class="btn" type="submit" value="SUBMIT ASANA">
	</footer>
</form>